{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "npm",
            "type": "shell",
            "command": "npm",
            "isBackground": true,
            "args": [
                "run",
                "compile",
                "--loglevel",
                "silent"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$tsc-watch"
        }
    ]
}
